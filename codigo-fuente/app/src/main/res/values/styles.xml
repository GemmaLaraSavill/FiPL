<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/FiPLActionBar</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>

    </style>

    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <!--<item name="android:background">#ff0000</item>-->
        <item name="@android:typeface">monospace</item>
        <item name="@android:textColor">@color/AlertDialogTitle</item>
        <item name="@android:textSize">28dp</item>

        <item name="@android:windowBackground">@android:color/transparent</item>


    </style>

    <style name="FiPLActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#b9b6b0</item>
    </style>

    <style name="CommandPalettePanel">
        <item name="android:background">#EEEEEE</item>
        <item name="android:paddingLeft">@dimen/command_palette_side_padding</item>
        <item name="android:paddingRight">@dimen/command_palette_side_padding</item>
    </style>

    <style name="spinner_text" parent="@android:style/Widget.TextView" >
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="ProgramCanvasPanel">
        <item name="android:background">#f8f8f8</item>
        <item name="android:paddingBottom">20dp</item>

    </style>

    <style name="separador">
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/txt_separator_line</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginBottom">1dip</item>
    </style>

    <style name="helpRow">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="helpText" parent="@android:style/TextAppearance">
        <item name="@android:typeface">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderText" parent="@android:style/TextAppearance">
        <item name="@android:typeface">monospace</item>
        <item name="@android:textColor">@color/AlertDialogTitle</item>
        <item name="@android:textSize">28dp</item>
        <item name="@android:paddingBottom">20dp</item>

    </style>

    <style name="SubHeaderText" parent="@android:style/TextAppearance">
        <item name="@android:typeface">monospace</item>
        <item name="@android:textColor">@color/SubHeaderText</item>
        <item name="@android:textSize">24dp</item>
        <item name="@android:paddingBottom">25dp</item>

    </style>

    <style name="NormalText" parent="@android:style/TextAppearance">
        <item name="@android:typeface">monospace</item>
        <item name="@android:textColor">@color/AlertDialogTitle</item>
        <item name="@android:textSize">20dp</item>
    </style>

    <style name="FiPLbutton">
        <item name="@android:typeface">monospace</item>
        <item name="@android:textColor">@color/white</item>
        <item name="@android:textSize">20dp</item>

    </style>

    <style name="ListItemText">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">20dp</item>
    </style>


</resources>
